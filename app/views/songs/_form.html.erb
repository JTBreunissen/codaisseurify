<%= form_for [@artist, Song.new(artist: @artist)] do |f| %>

  <div class="form-group">
    <label>Song Name</label>
    <%= f.text_field :songtitle, placeholder: "Song name", class: "form-control" %>
  </div>

  <div class="form-group">
   <label>Album</label>
   <%= f.text_field :album, placeholder: "Album name", class: "form-control" %>
 </div>

 <div class="form-group">
    <label>Year of release</label>
    <%= f.number_field :releaseyear, placeholder: "2017", class: "form-control" %>
  </div>

<br>
 <div class="actions">
   <p align="right"><%= f.submit "Save", class: "btn btn-primary" %></p>
 </div>
<% end %>
