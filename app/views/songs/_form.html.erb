<%= form_for @song do |f| %>

  <% @song.errors.full_messages.each do |error| %>
    <p class="alert alert-danger" role="alert"><%= error %></p>
  <% end %>

  <div class="form-group">
    <p align="right"><%= link_to "Back", "/artists/", class: "btn btn-primary" %></p>
    <label>Song Name</label>
    <%= f.text_field :songtitle, placeholder: "Song name", class: "form-control" %>
  </div>

  <div class="form-group">
   <label>Album</label>
   <%= f.text_field :album, placeholder: "Album name", class: "form-control" %>
 </div>

 <div class="form-group">
    <label>Year of release</label>
    <%= f.number_field :releaseyear, placeholder: "2017", class: "form-control" %>
  </div>

<%= f.collection_select :artist_id, Artist.order(:artistname),:id,:artistname, include_blank: true %>
<br>
 <div class="actions">
   <p align="right"><%= f.submit "Save", class: "btn btn-primary" %></p>
 </div>
<% end %>
